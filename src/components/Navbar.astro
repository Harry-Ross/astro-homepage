---
import { Icon } from "astro-icon";

const navItems = [
	{
		name: "Home",
		link: "/",
	},
	{
		name: "Blog",
		link: "/blog",
	},
	{
		name: "About",
		link: "/about",
	},
	{
		name: "GitHub",
		link: "https://github.com/Harry-Ross",
	},
];
---

<nav
	class="w-full inline-flex border-b-[1px] p-5 tracking-[0.35em] bg-zinc-900"
>
	<div class="flex-1">
		<span class="text-white md:pl-6 uppercase font-semibold">Harry Ross</span>
	</div>
	<div class="hidden md:flex flex-none items-center">
		{
			navItems.map((item) => {
				return (
					<a href={item.link} class="px-5">
						<span class="uppercase font-light text-white">{item.name}</span>
					</a>
				);
			})
		}
	</div>
	<Icon class="md:hidden" name="uil:bars" height="1.5rem" width="1.5rem" />
</nav>
