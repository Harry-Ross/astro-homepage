---
const navItems = [
  {
    name: 'Home',
    link: '/'
  },
  {
    name: 'Blog',
    link: '/blog'
  },
  {
    name: 'About',
    link: '/about'
  },
  {
    name: 'Twitter',
    link: 'https://twitter.com/harryrossdev'
  }
]

---

<nav class="w-full inline-flex bg-gray-900 p-5">
  <div class="flex-1">
    <h1 class="text-white font-bold pl-6">Harry Ross</h1>
  </div>
  <div class="flex-none flex items-center">
    {navItems.map(item => {
      return (
        <a href={item.link} class="px-5">
          <span class="uppercase font-semibold tracking-widest text-white">
            {item.name}
          </span>
        </a>
      );
    })}
  </div>
</nav>