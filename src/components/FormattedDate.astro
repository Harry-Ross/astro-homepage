---
export interface Props {
  date: Date;
  class?: string;
}

const { date } = Astro.props;
const classProp = Astro.props.class;
---

<time class={classProp} datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
