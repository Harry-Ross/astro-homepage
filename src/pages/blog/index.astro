---
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Section from '../../components/Section.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.date.valueOf() - b.data.date.valueOf()
);
---

<BaseLayout>
	<Section>
			{
				posts.map((post) => (
					<a href={`/blog/${post.slug}/`}>
						<article class="my-8">
							<div class="my-4">
								<h2 class="text-4xl mb-1 font-bold">{post.data.title}</h2>
								<FormattedDate class="italic" date={post.data.date} />
							</div>
							{post.data.thumbnail && <img width={720} height={360} src={post.data.thumbnail} alt="" />}
							<p class="text-xl my-4">{post.data.description}</p>
						</article>
						<hr class="border-slate-400" />
					</a>
				))
			}
	</Section>
</BaseLayout>
